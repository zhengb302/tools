#!/bin/bash

print_usage() {
    echo "Usage:"
    echo "  `basename $0` <text> [analyzer=ik_smart]"
    echo
}

if [ $# != 1 -a $# != 2 ]; then
    print_usage
    exit -1
fi

text=$1
analyzer=$2

if [ -z "$analyzer" ]; then
    analyzer=ik_smart
fi

echo 'Analyze an text with an analyzer, return the analyzed tokens.'
echo
echo "host: $ES_HOST"
echo
echo "analyzer: $analyzer"
echo

data='{"analyzer":"'$analyzer'","text":"'$text'"}'

cmd="curl -sS -u $ES_USERNAME:$ES_PASSWORD -XGET -H 'Content-Type: application/json' '$ES_SCHEME://$ES_HOST:$ES_PORT/_analyze?pretty' -d '$data'"
echo $cmd | bash
