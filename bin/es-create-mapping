#!/bin/bash

print_usage() {
    echo "Usage:"
    echo "  `basename $0` <index> <mapping>"
    echo
}

if [ $# != 2 ]; then
    print_usage
    exit -1
fi

index=$1
mapping=$2

echo 'Create an index mapping.'
echo
echo "host: $ES_HOST"
echo
echo "index: $index"
echo

cmd="curl -u $ES_USERNAME:$ES_PASSWORD -XPUT -H 'Content-Type: application/json' '$ES_SCHEME://$ES_HOST:$ES_PORT/$index?pretty' -d '$mapping'"
echo $cmd | bash
