#!/bin/bash
# 切换配置环境

print_usage() {
    echo "Usage:"
    echo "  `basename $0` <env-name>"
    echo
}

if [ $# != 1 ]; then
    print_usage
    exit -1
fi

env_name=$1

env_dir=$HOME/.tools-config/env
env_file=$env_dir/$env_name

if [ ! -f $env_file ]; then
    echo "env \"$env_name\" not existed."
    exit -1
fi

# 加载新的配置环境
. $env_file

echo "Enter new environment \"$env_name\"."

# 打开一个新的bash实例
bash

echo "Exit from environment \"$env_name\"."